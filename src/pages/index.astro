---
import "../styles/app.scss"
import favicon from "./../assets/images/logo-png.png"

import { Image } from 'astro:assets'
import logo from "../assets/images/logo-png.png"
const { APP_NAME, APP_AUTHOR, APP_DESCRIPTION, APP_KEYWORDS, APP_DAVDEVS, APP_YEAR } = import.meta.env

const now = new Date().getFullYear()
const copyrightYear: string = now === APP_YEAR ? `${APP_YEAR}` : `${APP_YEAR} - ${now}`
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content={APP_AUTHOR}>
		<meta name="description" content={APP_DESCRIPTION}>
		<meta name="keywords" content={APP_KEYWORDS}>

		<link rel="icon" type="image/png" href={favicon.src} />

		<title>{APP_NAME}</title>
	</head>
	<body id="top">
		<a href="#main" class="btn btn-skip-navigation">
			Skip Navigation
		</a>

		<button class="btn btn-theme" type="button" data-element="btn-theme">
			<span class="btn-theme__label btn-theme__label-light">
			  <i class="fa-light fa-sharp fa-lightbulb-on"></i>
			  <span class="btn-theme__label__text">Light</span>
			</span>
			<span class="btn-theme__label btn-theme__label-dark">
			  <i class="fa-light fa-sharp fa-lightbulb-slash"></i>
			  <span class="btn-theme__label__text">Dark</span>
			</span>
		</button>

		<header class="primary-header">
			<div class="wrapper | mx-auto p-4">
				<a href={APP_DAVDEVS} target="_blank">Back to Dav/Devs</a>

				<a href="/" class="brand">
					<Image src={logo} alt={APP_NAME} class="brand__img" />
					<span class="sr-only">{APP_NAME}</span>
				</a>

				<a href="#top">Back to Top</a>
			</div>
		</header>

		<main id="main" class="primary-main | container-q container-q-primary-main">
			<section class="section section-home section-home-hero">
				<div class="wrapper section__wrapper | mx-auto p-4 flow text-center">
					<h1 class="section-home-hero__heading | text-5xl font-bold">Dav/Devs Frontend Mentor Projects</h1>
					<p>
						Here is a collection of my submissions for the <a href="https://www.frontendmentor.io" target="_blank">Frontend Mentor</a> challenges. I noticed I was doing backend work in my day job, so I used my free time to tackle these frontend projects. I always aim to be well-rounded. My motto for these projects was to keep it raw and straightforward--meaning pure HTML, CSS, and native JavaScript. No fancy stuff like jQuery, React or SASS. This also allowed me to explore new native features like the HTML dialogue element and container queries.
					</p>
				</div>
			</section>

			<section class="section section-hero section-hero-content">
				<div class="wrapper section__wrapper | mx-auto p-4"></div>
			</section>
		</main>

		<footer class="primary-footer">
			<div class="wrapper | mx-auto p-4 text-center">
				<p>{APP_NAME} &copy; {copyrightYear}</p>
			</div>
		</footer>
	</body>
</html>
