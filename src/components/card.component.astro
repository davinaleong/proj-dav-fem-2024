---
import dayjs from 'dayjs'

const { APP_DATE_FORMAT } = import.meta.env

const { post } = Astro.props
const { frontmatter } = post
const { title, date, images, links } = frontmatter

const thisDate = dayjs(date).format(APP_DATE_FORMAT)
const { src, alt } = images[0]
---
<div class="card">
    <img src={`/images/screenshots/${src}`} alt={`${alt}`} class="card__image" />
    <div class="card__body | flow">
        <h2 class="text-2xl">{title}</h2>
        <p><em class="text-sm">{thisDate}</em></p>
    </div>
    <div class="card__footer">
        {links.map(({ label, href }: any) => <a href={href} class="link-primary" target="_blank">{label}</a>)}
    </div>
</div>